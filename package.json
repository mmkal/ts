{
  "name": "ts",
  "version": "0.0.1",
  "description": "Monorepo of assorted typescript projects",
  "repository": "https://github.com/mmkal/ts",
  "author": "mmkal <misha.kaletsky@gmail.com>",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "build": "lerna run build --scope expect-type && lerna run build --ignore expect-type",
    "clean": "lerna exec -- 'rm -rf dist'",
    "test": "jest",
    "eslint": "eslint --ext .ts,.js,.md",
    "lint": "yarn eslint .",
    "commit-date": "git log -n 1 --date=format:'%Y-%m-%d-%H-%M-%S' --pretty=format:'%ad'",
    "current-branch": "echo \"${CURRENT_BRANCH-$(git rev-parse --abbrev-ref HEAD)}\" | sed -E 's/refs\\/heads\\///' | sed -E 's/\\W|_/-/g'",
    "canary-preid": "echo \"$(yarn --silent current-branch)-$(yarn --silent commit-date)\"",
    "publish-canary": "lerna publish --canary --preid $(yarn --silent canary-preid) --dist-tag $(yarn --silent current-branch)",
    "prepublish-packages": "node scripts/prepublish && yarn clean && yarn build",
    "prepack": "node scripts/permalink",
    "postpack": "git checkout -- .",
    "publish-packages": "lerna publish"
  },
  "workspaces": [
    "packages/*"
  ],
  "renovate": {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":semanticCommits"
    ],
    "prConcurrentLimit": 3,
    "packageRules": [
      {
        "depTypeList": ["devDependencies"],
        "automerge": true
      },
      {
        "depTypeList": ["devDependencies"],
        "packagePatterns": [".*eslint.*"],
        "groupName": "eslint packages",
        "labels": ["linting"]
      }
    ]
  },
  "resolutions": {
    "minimist": "^1.2.5",
    "kind-of": ">=6.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/plugin-proposal-optional-chaining": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-typescript": "7.10.1",
    "@types/dedent": "0.7.0",
    "@types/eslint": "6.8.1",
    "@types/jest": "24.0.19",
    "@types/js-yaml": "3.12.4",
    "@types/lodash": "4.14.155",
    "@types/minimatch": "3.0.3",
    "@types/mock-fs": "4.10.0",
    "@types/node": "12.11.1",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "babel-jest": "26.0.1",
    "dedent": "0.7.0",
    "eslint": "7.2.0",
    "eslint-config-xo": "0.31.0",
    "eslint-config-xo-typescript": "0.31.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-unicorn": "20.1.0",
    "jest": "26.0.1",
    "js-yaml": "3.14.0",
    "lerna": "3.22.1",
    "lodash": "4.17.15",
    "minimatch": "3.0.4",
    "mock-fs": "4.12.0",
    "prettier": "2.0.5",
    "read-pkg-up": "7.0.1",
    "typescript": "3.9.5"
  }
}
