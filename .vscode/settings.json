{
  "typescript.tsdk": "tools/rig/node_modules/typescript/lib",
  "files.exclude": {
    "**/.git": false
  },
  "files.associations": {
    ".env*": "shellscript"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },
  "javascript.implicitProjectConfig.checkJs": true,
  "eslint.validate": ["python"], //["markdown", "javascript", "typescript", "yaml"],
  "eslint.packageManager": "pnpm",
  "eslint.nodePath": "tools/rig/node_modules",
  "eslint.debug": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
}
